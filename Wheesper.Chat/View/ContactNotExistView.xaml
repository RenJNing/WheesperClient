<UserControl x:Class="Wheesper.Chat.View.ContactNotExistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wheesper.Chat.View"
             mc:Ignorable="d" Background="White">
    <Grid Background="#FFECF0F1">
        <TextBlock Text="{Binding EMail, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{DynamicResource Text Title}" FontSize="24"/>
        <TextBlock Text="该邮箱不存在！" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{DynamicResource Text Body}"/>
        <Button Content="后退" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="140" Style="{DynamicResource ButtonStyle1}" Command="{Binding CancelCommod, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"/>
    </Grid>
</UserControl>
